@model KEKChat.Models.LoginModel
<!DOCTYPE html>

<html>
<head>
    <title>KEKChat Registration</title>
    <meta charset="UTF-8">
    <meta name="description" content="Registration Form for KEKChat.">
    <meta name="keywords" content="memes,meme,chat,social,economy,fun,login,register">
    <meta name="authors" content="Angel Neev, Simeon Laplev">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/LoginForm.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="form-parent-div">
        <h3 class="login-title">Register</h3>
        <div class="login-div">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
             {
                <br>
                <p class="center-text"><b>Username:</b></p>
                @Html.EditorFor(model => model.Username,
                new { htmlAttributes = new { @class = "login-input", placeholder = "Username" } })
                <br><br>
                <p class="center-text"><b>Password:</b></p>
                @Html.EditorFor(model => model.Password,
                new { htmlAttributes = new { @class = "login-input", placeholder = "Password" } })
                <br><br>
                <p class="center-text"><b>Repeat Password:</b></p>
                @Html.EditorFor(model => model.ConfirmPassword,
                new { htmlAttributes = new { @class = "login-input", placeholder = "Password Confirmation" } })
                <ul>
                    <li style="color:red; display: @Html.Raw(TempData["confirmationDisplay"]).ToString();">
                        Password mismatch. Retype password fields.
                    </li>
                    <li style="color:red; display: @Html.Raw(TempData["usertakenDisplay"]).ToString();">
                        There is already a user with that name.
                    </li>
                </ul>
                <button type="submit" id="sub_b" class="login-button">Register</button>
                <p class="center-text"><b>Already registered?</b> @Html.ActionLink("Login.", "Login")</p>
             }
        </div>
    </div>

    @{ RenderBody(); }
</body>
</html>
