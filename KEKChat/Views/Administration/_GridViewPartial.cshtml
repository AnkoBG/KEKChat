@using DevExpress.Data.WcfLinq.Helpers
@using DevExpress.Web.Internal

@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "Transactions";
        settings.CallbackRouteValues = new { Controller = "Administration", Action = "GridViewPartial" };

        settings.KeyFieldName = "ID";

        settings.SettingsPager.Visible = false;
        settings.SettingsBehavior.AllowSelectByRowClick = false;

        settings.SettingsPager.PageSize = 50;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.Off;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Left;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = false;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 400;
        settings.Columns.Add("Buyer.Username", "Buyer");
        settings.Columns.Add("SellerName", "Seller");
        settings.Columns.Add("Value", "Price for one");
        settings.Columns.Add("Quantity");
        settings.Columns.Add("AssetName", "Name");
        settings.Columns.Add("Meme.Subreddit");
        settings.Columns.Add("Meme.GoldCount");
        settings.Columns.Add("Meme.NSFW");
        settings.Columns.Add("TimeStamp");
    });
}
@grid.Bind(Model).GetHtml()