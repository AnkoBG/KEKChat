@model KEKChat.Models.RegistrationModel
<!DOCTYPE html>

<html>
<head>
    <title>KEKChat Registration</title>
    <meta charset="UTF-8">
    <meta name="description" content="Registration Form for KEKChat.">
    <meta name="keywords" content="memes,meme,chat,social,economy,fun,login,register">
    <meta name="authors" content="Angel Neev, Simeon Laplev">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/LoginForm.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="~/pepe.png" />
</head>
<body>
    <div class="form-parent-div">
        <h3 class="login-title">Register</h3>
        <div class="login-div">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <br>
                <p class="center-text"><b>Username:</b></p>
                @Html.EditorFor(model => model.Username,
                 new { htmlAttributes = new { @class = "login-input", @placeholder = "Username", @autofocus = "" } })
                <br><br>
                @Html.ValidationMessageFor(model => Model.Username, null, new { @class = "text-error" })
                <p class="center-text"><b>Password:</b></p>
                @Html.EditorFor(model => model.Password,
                 new { htmlAttributes = new { @class = "login-input", @placeholder = "Password" } })
                <br><br>
                <p class="center-text"><b>Repeat Password:</b></p>
                @Html.EditorFor(model => model.ConfirmPassword,
                 new { htmlAttributes = new { @class = "login-input", @placeholder = "Password Confirmation" } })
                <br><br>
                @Html.ValidationMessageFor(model => Model.ConfirmPassword, null, new { @class = "text-error" })
                @Html.ValidationMessage("RegError", new { @class = "text-error" })
                <button type="submit" class="login-button">Register</button>
                <p class="center-text"><b>Already registered?</b> @Html.ActionLink("Login.", "Login")</p>
            }
        </div>
    </div>
</body>
</html>
